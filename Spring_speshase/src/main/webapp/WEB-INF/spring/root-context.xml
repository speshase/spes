	<!-- Naver 메일 설정 -->
	<!-- Daum Kakao 아이디 : speshase.naver@hanmail.net으로 해야함. -->
	<bean id = "mailSender" class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.daum.net"></property>
		<property name="port" value="465"></property>
		<property name="username" value="speshase.naver@hanmail.net"></property>
		<property name="password" value="-"></property>
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
				<!-- 보안연결 SSL과 관련된 설정 -->
				<prop key="mail.smtps.checkserveridentity">true</prop>
				<prop key="mail.smtps.ssl.trust">*</prop>
				<prop key="mail.debug">true</prop>
				<prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
			</props>
		</property>
	</bean>
	
	<!-- aop추가 -->
	<aop:aspectj-autoproxy></aop:aspectj-autoproxy>
	<context:component-scan base-package="com.speshase.aop"></context:component-scan>
	<!-- mybatis-spring:scan : base-package 속성은 지정된 패키지의 모든 MyBatis 관련된 것을 찾아서 처리 -->
	<context:component-scan base-package="com.speshase.mapper"></context:component-scan>
	<context:component-scan base-package="com.speshase.service"></context:component-scan>
	
</beans>

